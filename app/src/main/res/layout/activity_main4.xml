<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/img3"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/displaytxt4"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="60dp"
        android:text="It's Lunch time!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="764dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/myImageView1"
            android:layout_width="184dp"
            android:layout_height="219dp"
            android:layout_marginTop="44dp"

            android:src="@drawable/loadedbaconcheesefriesimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/caption1"
            android:layout_width="148dp"
            android:layout_height="53dp"
            android:layout_marginBottom="15dp"
            android:text="Loaded Bacon Cheese Fries"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/myImageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myImageView1"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/myImageView2"
            android:layout_width="197dp"
            android:layout_height="223dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/proteinwrap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/caption2"
            android:layout_width="149dp"
            android:layout_height="36dp"
            android:layout_marginTop="7dp"
            android:text="Protein Wrap"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/myImageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/caption1"
            app:layout_constraintTop_toBottomOf="@+id/myImageView2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/myImageView3"
            android:layout_width="187dp"
            android:layout_height="185dp"
            android:layout_marginTop="336dp"
            android:src="@drawable/tortillawrapimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/caption3"
            android:layout_width="159dp"
            android:layout_height="136dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:text="Tortilla Wrap"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/backBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/myImageView4"
            android:layout_width="160dp"
            android:layout_height="175dp"
            android:layout_marginTop="336dp"
            android:src="@drawable/garlicbuttersteakbiteswithmashedpotatoesandgreenbeansimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.917"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/caption4"
            android:layout_width="140dp"
            android:layout_height="146dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="47dp"
            android:text="Garlic Butter Steak Bites with Mashed Potatoes and Green Beans"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/proceedBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/caption3"
            app:layout_constraintTop_toBottomOf="@+id/myImageView4"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_marginBottom="28dp"
            android:backgroundTint="@color/Putty"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="150dp"
            android:layout_height="66dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/Putty"
            android:text="Proceed"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.931"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>