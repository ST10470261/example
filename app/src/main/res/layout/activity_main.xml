<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/img3"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="359dp"
        android:layout_height="85dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="25dp"
        android:text="  !Welcome to!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="58dp"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/timeInputTxt"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Enter Time"
        android:inputType="number"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/Putty"
        android:textSize="24dp"
        android:textStyle="italic"
        android:translationY="-11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timeOfDayTxt"
        android:layout_width="394dp"
        android:layout_height="59dp"
        android:layout_marginBottom="244dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="-122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/checkTimeBtn"
            android:layout_width="158dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/Putty"
            android:text="Check Time"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.566" />

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="137dp"
            android:layout_height="61dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/Putty"
            android:text="Clear"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/viewMealBtn"
            android:layout_width="146dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/Putty"
            android:text="View Meal"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.573" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="718dp">

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:backgroundTint="@color/Putty"
            android:text="Exit"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="29dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.283" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>